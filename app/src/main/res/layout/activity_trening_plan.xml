<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreningPlanActivity"
    android:background="@drawable/gym_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="WYBIERZ POZIOM"
            android:textColor="#fff"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/beginnerBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_tr"
            android:text="Poczkątkujący"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/medAdvBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_tr"
            android:text="Średniozaawansowany"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
        android:id="@+id/advBtn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg_tr"
        android:text="Zaawansowany"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

        <Button
            android:id="@+id/yourOwn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_bg_tr"
            android:text="Własny plan"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</android.widget.LinearLayout>